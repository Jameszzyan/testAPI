<%- include('./layouts/admin_header.ejs'); %>

<div class="main">
  <%- include('./layouts/admin_navbar.ejs'); %>
  <div class="container-fluid">
    <div class="page-title">
      <h1>分类目录</h1>
    </div>
    <!-- 有错误信息时展示 -->
    <div class="alert alert-danger" style="display: none;width:200px">
    </div>
    <div class="row">
      <div class="col-md-4">
        <form>
          <input type="hidden" name='id' id='id'>
          <h2>添加新分类目录</h2>
          <div class="form-group">
            <label for="name">名称</label>
            <input id="name" class="form-control" name="name" type="text" placeholder="分类名称">
          </div>
          <div class="form-group">
            <label for="alias">别名</label>
            <input id="alias" class="form-control" name="alias" type="text" placeholder="alias">
            <p class="help-block"><strong></strong></p>
          </div>
          <div class="form-group">
            <input class="btn btn-primary btnAdd" type="button" value="添加">
          </div>
        </form>
      </div>
      <div class="col-md-8">
        <div class="page-action">
          <!-- show when multiple checked -->
          <a class="btn btn-danger btn-sm btndels" href="javascript:;" style="display: none;width:100px">批量删除</a>
          <ul class="pagination pagination-sm pull-right" style="float:right">
            <li><a href="#">上一页</a></li>
            <li><a href="#">下一页</a></li>
          </ul>
        </div>

        <table class="table table-striped table-bordered table-hover">
          <thead>
            <tr>
              <th class="text-center" width="40"><input type="checkbox" class="chkAll"></th>
              <th>名称</th>
              <th>alias</th>
              <th class="text-center" width="100">操作</th>
            </tr>
          </thead>
          <tbody>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
<%- include('./layouts/admin_aside.ejs'); %>

<%- include('./layouts/admin_footer.ejs'); %>
<script type="text/template" id="all_categories">
  {{each result}}
    <tr>
      <td class="text-center" width="40"><input type="checkbox" class="chkAll"></td>
      <td>{{$value.name}}</td>
      <td>{{$value.alias}}</td>
      <td class="text-center" width="100">
          <a href="javascript:;" data-name='{{$value.name}}' data-alias='{{$value.alias}}' data-id='{{$value.categories_id}}' class="btn btn-info btn-xs btnedit">编辑</a>
          <a href="javascript:;" class="btn btn-danger btn-xs btndel" data-id='{{$value.categories_id}}'>删除</a>
      </td>
    </tr>
  {{/each}}
</script>
<script src="/assets/vendors/template/template.js"></script>
<script src="/assets/vendors/bootstrappaginator/bootstrap-paginator.min.js"></script>
<script src="/assets/js/admin/categories.js"></script>