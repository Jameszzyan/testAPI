<%- include('./layouts/admin_header.ejs'); %>

<div class="main">
  <%- include('./layouts/admin_navbar.ejs'); %>
  <div class="container-fluid">
    <div class="page-title">
      <h1>用户</h1>
    </div>
    <!-- 有错误信息时展示 -->
    <div class="alert alert-danger" style="display:none;">

    </div>
    <div class="row">
      <div class="col-md-4">
        <form>
          <h2>添加新用户</h2>
          <div class="form-group">
            <label for="email">邮箱</label>
            <input id="email" class="form-control" name="email" type="email" placeholder="邮箱">
          </div>
          <div class="form-group">
            <label for="alias">别名</label>
            <input id="alias" class="form-control" name="alias" type="text" placeholder="alias">
            <p class="help-block"><strong></strong></p>
          </div>
          <div class="form-group">
            <label for="nickname">昵称</label>
            <input id="nickname" class="form-control" name="nickname" type="text" placeholder="昵称">
          </div>
          <div class="form-group">
            <label for="password">密码</label>
            <input id="password" class="form-control" name="password" type="password" placeholder="密码">
          </div>
          <div class="form-group">
            <button class="btn btn-primary" type="submit">添加</button>
          </div>
        </form>
      </div>
      <div class="col-md-8">
        <div class="page-action">
          <!-- show when multiple checked -->
          <a class="btn btn-danger btn-sm" href="javascript:;">批量删除</a>
          <ul class="pagination pagination-sm pull-right" style="float:right">
            <li><a href="#">上一页</a></li>
            <li><a href="#">下一页</a></li>
          </ul>
        </div>
        <table class="table table-striped table-bordered table-hover">
          <thead>
            <tr>
              <th class="text-center" width="40"><input type="checkbox"></th>
              <th class="text-center" width="80">头像</th>
              <th>邮箱</th>
              <th>别名</th>
              <th>昵称</th>
              <th>状态</th>
              <th class="text-center" width="100">操作</th>
            </tr>
          </thead>
          <tbody>
            <!-- 前端渲染用户列表 -->
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>

<%- include('./layouts/admin_aside.ejs'); %>

<script type="text/template" id="users_list">
    {{each result}}
    <tr>
      <td class="text-center"><input type="checkbox"></td>
      <td class="text-center"><img class="avatar" src="{{$value.avatar}}"></td>
      <td>{{$value.email}}</td>
      <td>{{$value.alias}}</td>
      <td>{{$value.nickname}}</td>
      {{ if $value.status == 'activated'}}
      <td>激活</td>
      {{/if}}
      {{ if $value.status == 'unactivated'}}
      <td>未激活</td>
      {{/if}}
      <td class="text-center">
        <a data-id="{{$value.user_id}}"  href="/admin/login" target="_blank" class="btn btn-default btn-xs">编辑</a>
        <a data-id="{{$value.user_id}}" href="javascript:;" class="btn btn-danger btn-xs">删除</a>
      </td>
    </tr>
    {{/each}}
  </script>
<script src="/assets/vendors/template/template.js"></script>
<script src="/assets/vendors/bootstrappaginator/bootstrap-paginator.min.js"></script>
<script src="/assets/js/admin/users_list.js"></script>

<%- include('./layouts/admin_footer.ejs'); %>